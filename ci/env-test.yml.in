name: jupyterlab-lsp

channels:
  - conda-forge
  - defaults

dependencies:
  # runtime dependencies
  - python {}
  - jupyterlab >=1.1,<1.2
  # build dependencies
  - nodejs
  # for python language server (and development)
  - flake8 >=3.5
  - python-language-server
  # for R language server and kernel
  - r
  - r-irkernel
  - r-languageserver
  - rpy2
  # test tools
  - pytest-asyncio
  - pytest-azurepipelines
  - pytest-cov
  - pytest-flake8
  - pytest-runner
  # browser testing
  - robotframework-seleniumlibrary
  - firefox
  - geckodriver
